<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigation_Example.RecommendationsPage"
             Title="Recommendations">
    <VerticalStackLayout>
        <Label 
            x:Name="RecommendationLabel"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Home" x:Name="RecommendationHomeButton" FontSize="Medium"
   Padding="20"
   FontAttributes="Bold"
   CornerRadius="15" Clicked="RecommendationHomeBtn_Clicked"/>

        <Button Text="Back" x:Name="RcommendationBackButton" FontSize="Medium"
   Padding="20"
   FontAttributes="Bold"
   CornerRadius="15" Clicked="RecommendationBackBtn_Clicked"/>




    </VerticalStackLayout>
</ContentPage>